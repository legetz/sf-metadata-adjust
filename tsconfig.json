{
  "extends": "@salesforce/dev-config/tsconfig-strict-esm.js",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}