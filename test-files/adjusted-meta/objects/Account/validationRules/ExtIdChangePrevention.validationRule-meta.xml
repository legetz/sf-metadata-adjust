<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ExtIdChangePrevention</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISNEW()) &amp;&amp; ISCHANGED(ExternalId__c) &amp;&amp; NOT(ISBLANK(PRIORVALUE(ExternalId__c)))</errorConditionFormula>
    <errorDisplayField>ExternalId__c</errorDisplayField>
    <errorMessage>External ID cannot be changed</errorMessage>
</ValidationRule>
